{
  "name": "brace_matrix",
  "main": "build/brace_matrix.js",
  "description": "A port of the GlMatix library with reduced functionality and an easy to use design",
  "version": "1.0.3",
  "dependencies": {
    "amdefine": "^1.0.1"
  },
  "devDependencies": {
    "brace_maybe": "^0.1.4",
    "brace_umd": "^0.8.10",
    "chai": "^4.2.0",
    "gl-matrix": "^3.1.0",
    "mocha": "^7.0.0",
    "requirejs": "^2.3.5"
  },
  "license": "MIT",
  "optionalDependencies": {
    "brace_document_navlink": "^1.1.0",
    "brace_document_specification": "^1.1.0",
    "brace_document_link": "^1.1.0"
  },
  "scripts": {
    "test": "mocha",
    "make_docs": "brace_document --navlink --link --link-dest ../Readme.md --link-path synopsis.md -r -i docs --force-title --title \"Brace Matrix help pages\" --sort depth --specification",
    "make_docs_extra": "npm run make_docs --silent -- --mocha",
    "build_config": "node ./node_modules/brace_umd/bin/build_umd.js --compress unused,unsafe --mangle toplevel",
    "build_umd": "r_js -o rjs_build_umd.js",
    "build_amd": "r_js -o rjs_build.js",
    "build": "npm run build_config --silent && npm run build_amd --silent && npm run build_umd --silent"
  },
  "homepage": "https://github.com/restarian/brace_matrix#readme",
  "keywords": [
    "matrix",
    "math",
    "vector",
    "calculus"
  ],
  "author": {
    "name": "Robert Steckroth",
    "email": "RobertSteckroth@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/restarian/brace_matrix/issues"
  },
  "bundleDependencies": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/restarian/brace_matrix.git"
  },
  "technologies": [
    {
      "name": "VIM",
      "description": "As an IDE",
      "url": "https://www.vim.org"
    },
    {
      "name": "Windows 10",
      "description": "For unit testing and as the base operating system",
      "url": "https://www.microsoft.com/en-us/software-download/windows10"
    },
    {
      "name": "Git",
      "description": "For repository management",
      "url": "https://git-scm.com"
    },
    {
      "name": "Github",
      "description": "For repository storage",
      "url": "https://github.com"
    },
    {
      "name": "NPM",
      "description": "For module storage",
      "url": "https://npmjs.org"
    }
  ]
}
